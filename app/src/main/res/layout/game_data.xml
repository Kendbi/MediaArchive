<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/gameTitleDB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/gameDeveloperDB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/game_developer"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="277dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/type_db"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/gameYearOfPublication"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/year_of_publication"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/gameStatusDB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/status_db"
            android:textSize="20sp" />

    </LinearLayout>

</LinearLayout>